{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/typings",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": [
      "ES6",
      "ES2015"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "references": [
    {
      "path": "./core"
    },
    {
      "path": "./web"
    }
  ],
  "exclude": [
    "core",
    "dist",
    "web",
    "node_modules"
  ]
}
